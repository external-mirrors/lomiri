polkit.addRule(function(action, subject)
{
    if (subject.user == "lightdm")
    {
        // Disable Controlling of Network Devices
        if (action.id == "org.freedesktop.NetworkManager.enable-disable-network" || action.id == "org.freedesktop.NetworkManager.enable-disable-wifi" || action.id == "org.freedesktop.NetworkManager.enable-disable-wwan" || action.id == "org.freedesktop.NetworkManager.enable-disable-wimax")
        {
            return polkit.Result.NO;
        }

        // Disable Sleep and Wake
        if (action.id == "org.freedesktop.NetworkManager.sleep-wake")
        {
            return polkit.Result.NO;
        }

        // Disable WiFi Sharing
        if (action.id == "org.freedesktop.NetworkManager.wifi.share.protected" || action.id == "org.freedesktop.NetworkManager.wifi.share.open")
        {
            return polkit.Result.NO;
        }

        // Disable Settings Modifications
        if (action.id == "org.freedesktop.NetworkManager.settings.modify.own" || action.id == "org.freedesktop.NetworkManager.settings.modify.system" || action.id == "org.freedesktop.NetworkManager.settings.modify.hostname")
        {
            return polkit.Result.NO;
        }

        // Disable User Connections
        if (action.id == "org.freedesktop.NetworkManager.use-user-connections")
        {
            return polkit.Result.NO;
        }

        // Enable Controlling of Network Connections
        if (action.id == "org.freedesktop.NetworkManager.network-control")
        {
            return subject.active ? polkit.Result.YES : polkit.Result.NO;
        }
    }
});
